<script>
  // تبويبات
  const sections=[...document.querySelectorAll('.section')];
  const tabs=[...document.querySelectorAll('.nav button')];
  function showTab(id){
    sections.forEach(s=>s.classList.toggle('active', s.id===id));
    tabs.forEach(b=>b.classList.toggle('active', b.dataset.tab===id));
    window.scrollTo(0,0);
  }
  tabs.forEach(b=> b.addEventListener('click', ()=> showTab(b.dataset.tab)));
  document.getElementById('cats').addEventListener('click', e=>{
    const t=e.target.closest('.thumb'); if(!t) return;
    const link=t.dataset.link||'#'; if(link==='#wallet') showTab('wallet'); else showTab('invest');
  });

  // سلايدر
  const slider=document.querySelector('#hero .slides');
  const slides=[...document.querySelectorAll('#hero .slide')];
  const dotsWrap=document.querySelector('#hero .dots'); let idx=0;
  function renderDots(){ dotsWrap.innerHTML=''; slides.forEach((_,i)=>{const d=document.createElement('span'); d.className='dot'+(i===idx?' active':''); d.onclick=()=>go(i); dotsWrap.appendChild(d);});}
  function go(i){ idx=(i+slides.length)%slides.length; slider.style.transform=`translateX(-${idx*100}%)`; renderDots(); }
  setInterval(()=>go(idx+1), 3800); renderDots();

  // صفحة تفاصيل استثمار (تجريبية)
  function openDetail(title, desc, img, price){
    showTab('invest');
    const box=document.getElementById('detail');
    box.style.display='block';
    document.getElementById('dTitle').textContent=title;
    document.getElementById('dDesc').textContent=desc;
    document.getElementById('dImg').src=img;
    document.getElementById('dPrice').textContent=price.toLocaleString('ar-IQ')+' د.ع';
    const buy=document.getElementById('buyBtn');
    const after=document.getElementById('afterBuy');
    after.style.display='none';
    buy.onclick=()=>{ after.style.display='grid'; window.scrollTo({top:document.body.scrollHeight,behavior:'smooth'}); };
  }
</script>
